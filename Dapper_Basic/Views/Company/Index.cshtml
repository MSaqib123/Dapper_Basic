@model IEnumerable<Company>

<div class="d-flex justify-content-between align-items-center">
    <h1>Company List</h1>
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>PostalCode</th>
            <th>City</th>
            <th>State</th>
            <th>Action</th>
            <th>Manage Employee</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.PostalCode</td>
                <td>@item.City</td>
                <td>@item.State</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-warning" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Employee" asp-action="Index" asp-route-companyId="@item.Id">ManageEmployee</a>
                </td>
            </tr>
        }
    </tbody>
</table>
